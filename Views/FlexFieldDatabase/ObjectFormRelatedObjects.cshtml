@using Microsoft.AspNetCore.Mvc.Localization

@model IViewLocalizer

@if(User.IsInRole(RoleNames.Aika))
{
    <h4>@Model["ReferencedInAikaQuests"] <i class="glyphicon glyphicon-refresh spinning" style="display: none" data-bind="visible: loadingReferencedInQuests"></i><i class="glyphicon glyphicon-warning-sign text-danger" title="@Model["ErrorOccured"]" style="display: none" data-bind="visible: errorLoadingReferencedInQuests"></i></h4>
    <ul class="gn-flexFieldObjectFormRelatedList" data-bind="foreach: referencedInQuests">
        <li>
            <a class="gn-clickable" data-bind="text: name, href: $root.buildAikaQuestUrl" target="_blank"></a>
        </li>
    </ul>
}

