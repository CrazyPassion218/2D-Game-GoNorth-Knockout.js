@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<!-- Delete Node Dialog -->
<div class="modal fade" role="dialog" data-bind="modal: showConfirmNodeDeleteDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer["AreYouSure"]</h4>
            </div>
            <div class="modal-body">
                <p>@Localizer["AreYouSureYouWantToDeleteTheNode"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click: deleteNode">@Localizer["Yes"]</button>
                <button type="button" class="btn btn-default" data-bind="click: closeConfirmNodeDeleteDialog">@Localizer["No"]</button>
            </div>
        </div>
    </div>
</div>